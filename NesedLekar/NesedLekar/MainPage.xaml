        <Rectangle Fill="#FF07C7FF" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="360"/>
        <TextBlock HorizontalAlignment="Left" Margin="56,28,0,0" TextWrapping="Wrap" Text="Neseď u Lekára" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="36"/>
